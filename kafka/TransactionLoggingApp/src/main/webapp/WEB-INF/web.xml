<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" version="3.1">

    <filter>
        <filter-name>TransactionLoggingFilter</filter-name>
        <filter-class>com.example.filter.TransactionLoggingFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>TransactionLoggingFilter</filter-name>
        <url-pattern>/transaction</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>TransactionServlet</servlet-name>
        <servlet-class>com.example.servlet.TransactionServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>TransactionServlet</servlet-name>
        <url-pattern>/transaction</url-pattern>
    </servlet-mapping>

</web-app>
